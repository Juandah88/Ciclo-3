    }
    
    h1, h2, h3, h4, h5, h6 {
        color: rgb(57, 59, 68); /* valido para titulos y parrafos */
        text-align: center;
    }
    
    img {
        display: block;
        width: 20%;
        height: auto;
        margin-left: auto;
        margin-right: auto;
        border-radius: 15px;
        box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
    }
    
    a {
